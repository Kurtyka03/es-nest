// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model auth {
  uuid      String   @unique
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  email       String   @unique
  hash        String   @unique
  jwt         String
  statusLogin Boolean?
}

model user {
  uuid      String   @unique
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  name    String
  surname String
}
